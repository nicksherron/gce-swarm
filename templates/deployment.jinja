resources:
- name: swarm-cluster-manager
  type: templates/manager.jinja
  properties:
    swarm_secret: {{ properties["swarm_secret"] }}
    prefix: {{ properties["prefix"] }}
    zone: {{ properties["zone"] }}
    machine_type: {{ properties["manager_machine_type"] }}
    disk: {{ properties["manager_disk"] }}
- name: swarm-cluster-workers
  type: templates/worker.jinja
  properties:
    swarm_secret: {{ properties["swarm_secret"] }}
    prefix: {{ properties["prefix"] }}
    zone: {{ properties["zone"] }}
    num: {{ properties["num"] }}
    machine_type: {{ properties["worker_machine_type"] }}
    disk: {{ properties["worker_disk"] }}